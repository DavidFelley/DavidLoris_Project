<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackGray"
        android:clickable="true"
        android:onClick="SubjectClick"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is my message, let's see what it will look like in the application."
            android:layout_below="@id/text_view_title_subject_inMessage"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/text_view_pseudoInMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pseudo"
            android:layout_below="@id/text_view_message"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

        <TextView
            android:id="@+id/text_view_dateInMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_below="@id/text_view_message"
            android:layout_alignParentRight="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>